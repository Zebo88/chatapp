generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model User {
  id        String   @id @default(cuid()) // collision-resistant ids
  email     String   @unique
  fullname  String
  username  String   @unique
  password  String
  gender    Gender
  profilePic String
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
  conversationIds String[]

  conversations Converstaion[]
  messages Message[]
}

model Converstaion {
  id        String   @id @default(cuid())
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt

  participantIds String[]
  paricipants User[]

  messageIds String[]
  messages Message[]
}

model Message {
  id        String   @id @default(cuid())
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt

  senderId String
  sender User @relation(fields: [senderId], references: [id])

  conversationId String
  conversation Converstaion @relation(fields: [conversationId], references: [id])

  body String
}

enum Gender {
  male
  female
}